{{#if errors}}
	{{#each errors}}
	<div class="col-md-12">
		<div class="alert alert-danger"> {{msg}} </div>
	</div>
	{{/each}}
{{/if}}
<form class="form-signin" method="post" action="/users/register">
<img class="mb-4" src="" alt="" width="72" height="72">
<h1 class="h3 mb-3 font-weight-normal">Register Here</h1>
<label for="inputEmail" class="sr-only">Email address</label>
<input type="email" name="email" id="inputEmail" class="form-control" placeholder="Email address" autofocus>
<label for="inputPassword" class="sr-only">Password</label>
<input type="password" name="password" id="inputPassword" class="form-control" placeholder="Password">
<div class="checkbox mb-3">
</div>
<button class="btn btn-lg btn-primary btn-block" type="submit">Submit</button>
<p class="mt-5 mb-3 text-muted">&copy; 2017-2018</p>
</form>